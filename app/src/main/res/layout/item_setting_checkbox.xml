<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:tint="#666666"
            tools:src="@drawable/ic_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/itemSettingCheckBoxIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    <TextView
            android:maxLines="1"
            android:layout_marginStart="16dp"
            android:id="@+id/itemSettingCheckBoxTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/itemSettingCheckBoxCheckBox"
            app:layout_constraintStart_toEndOf="@id/itemSettingCheckBoxIcon"
            android:textColor="#000000"
            android:textSize="14sp"
            tools:text="我是设置标题"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginStart="16dp"
            tools:text="这里是一些说明"
            android:maxLines="3"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:id="@+id/itemSettingCheckBoxContent"
            app:layout_constraintEnd_toStartOf="@id/itemSettingCheckBoxCheckBox"
            app:layout_constraintStart_toEndOf="@id/itemSettingCheckBoxIcon"
            app:layout_constraintTop_toBottomOf="@id/itemSettingCheckBoxTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <CheckBox
            android:focusableInTouchMode="false"
            android:checked="false"
            android:buttonTint="@color/colorAccent"
            android:enabled="false"
            android:background="@null"
            android:focusable="false"
            android:clickable="false"
            android:id="@+id/itemSettingCheckBoxCheckBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>