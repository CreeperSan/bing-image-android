<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialogPreviewDownloadRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

    <ImageView
            android:src="@color/diverColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <CheckBox
            android:layout_marginTop="8dp"
            android:id="@+id/dialogPreviewDownloadCheckBox"
            android:text="@string/previewDownloadDialogCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/previewDownloadDialogHint"
            android:id="@+id/dialogPreviewDownloadHintText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</LinearLayout>