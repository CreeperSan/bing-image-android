<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
            android:tint="@color/tintGray"
            android:id="@+id/itemMainDrawerSelectionIcon"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_main_search"
            android:layout_width="24dp"
            android:layout_height="24dp"/>


    <TextView
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/itemMainDrawerSelectionText"
            tools:text="2019 02 19"
            android:textSize="14sp"
            android:textColor="@color/tintGray"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <ImageView
            android:tint="@color/tintGray"
            android:id="@+id/itemMainDrawerSelectionIconHint"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_main_search"
            android:layout_width="18dp"
            android:layout_height="18dp"/>

</LinearLayout>